<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60px"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/player1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/player_name"
                android:padding="15dp"
                android:text="Player 1"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/player1_set1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/player1_name"
                android:background="@drawable/back"
                android:padding="15dp"
                android:text="0"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/player1_set2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/player1_set1"
                android:background="@drawable/back"
                android:padding="15dp"
                android:text="0"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/player1_set3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/player1_set2"
                android:background="@drawable/back"
                android:padding="15dp"
                android:text="0"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/player1_game"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/player1_set3"
                android:background="@drawable/player_name"
                android:padding="15dp"
                android:text="0"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/player2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/player1_name"
                android:background="@drawable/player_name"
                android:padding="15dp"
                android:text="Player 2"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/player2_set1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/player1_set1"
                android:layout_toRightOf="@id/player2_name"
                android:background="@drawable/back"
                android:padding="15dp"
                android:text="0"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/player2_set2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/player1_set2"
                android:layout_toRightOf="@id/player2_set1"
                android:background="@drawable/back"
                android:padding="15dp"
                android:text="0"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/player2_set3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/player1_set3"
                android:layout_toRightOf="@+id/player2_set2"
                android:background="@drawable/back"
                android:padding="15dp"
                android:text="0"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/player2_game"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/player1_game"
                android:layout_toRightOf="@id/player2_set3"
                android:background="@drawable/player_name"
                android:padding="15dp"
                android:text="0"
                android:textAlignment="center" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24px"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8px"
            android:onClick="addPlayer1Game"
            android:text="+ Player 1"
            android:textColor="@android:color/white" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8px"
            android:onClick="addPlayer2Game"
            android:text="+ Player 2"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:onClick="resetGame"
            android:text="Reset"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</LinearLayout>